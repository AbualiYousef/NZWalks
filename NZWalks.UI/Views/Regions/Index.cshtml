@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>
@{
}
<h1 class="mt-3">Regions</h1>

<div class="d-flex mt-3" justify-content-end>
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>
<table class="table table-striped table-primary">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th> </th>
        </tr>
    </thead>
<tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
</table>
